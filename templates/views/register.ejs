  <body>
    <!-- form header -->
    <div class="form-header">
      <h1>ADD NEW USER</h1>
    </div>
    <form action="#" method="POST"  >
      <div class="form-body">
        <div class="horizontal-group">
          <div style="display: flex;">
            <div class="form-body">
          <div class="form-group">
            <label for="name" class="label-title">Name *</label>
            <input type="text" id="name" class="form-input" name="name" placeholder="Enter Name" autocomplete="off"
              required="required" />
              <span id="naming" class="text-danger font-weight-bold"></span>
          </div>
          <div class="form-group">
            <label for="email" class="label-title">Email *</label>
            <input type="text" id="email" class="form-input" name="email" placeholder="Enter Email" autocomplete="off" required="required">
            <span id="email" class="text-danger font-weight-bold"></span>
          </div>
          <div class="form-group" style="display: flex;align-items: center">
            <label for="gender" class="label-title" >Gender*</label>
            <input type="radio" style="width: auto;" id="gender" class="form-input" name="gender" value="male" required="required"><span style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">MALE</span>
             <input type="radio" style="width: auto; margin-left: 10px;" id="gender" class="form-input" name="gender" value="female" required="required"><span style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">FEMALE</span>
          </div>
  
          <div class="form-group">
            <label for="phone" class="label-title">Phone *</label>
            <input type="text" id="phone" class="form-input" name="phone" placeholder="Enter Phone" autocomplete="off"
              required="required">
              <span id="phone" class="text-danger font-weight-bold"></span>
          </div>
          <div class="form-group left" style="display: flex;">
            <label for="hobbies" class="label-title">Hobbies:</label>
            <input type="checkbox" id="Dancing" name="hobbies" value="Dancing" style="padding: 0 10px 0;">
            <label for="hobbies" style="font-size: 16px;"> Dancing</label><br>
            <input type="checkbox" id="Singing" name="hobbies" value="Singing">
            <label for="Singing" style="font-size: 16px;"> Singing</label><br>
            <input type="checkbox" id="Sports" name="hobbies" value="Sports">
            <label for="Sports" style="font-size: 16px;"> Sports</label><br>
          </div>

          <div class="form-group left">
            <label for="txtbirthdate" class="label-title">Date of birth *</label>
            <input type="text" id="txtbirthdate" class="form-input" name="txtbirthdate" placeholder="DD-MM-YYYY" onkeyup="getAgeVal(0)" onblur="getAgeVal(0);" required="required" />
          </div>
 
         

          <div class="form-group">
          <label for="txtage"  class="label-title" > Age</label>
          <input type="text" name="txtage" id="txtage" autocomplete="off" disabled>
          </div>
  

          <div class="form-group">
            <label for="file" class="label-title">Upload profile photo*</label>
            <input type="file" id="file" class="form-input" name="file" placeholder="enter your file" />
          </div>
          <div class="form-group left ">
              <label for="password" class="label-title">Password*</label>
              <input type="password" id="pass" class="form-input" name="password" placeholder="Enter Password"
                required="required">
                <span id="pass" class="text-danger font-weight-bold"></span>
            </div>
          <div class="form-group left">
              <label for="password" class="label-title">Confirm Password*</label>
              <input type="password" id="confirmpass" class="form-input" name="confirmpassword" placeholder="Enter Confirm Password"
                required="required">
                <span id="confirmpass" class="text-danger font-weight-bold"></span>
            </div>
          <div class="form-footer">
            <button type="submit" class="btn" value="Register">Register</button>
          </div>
    </form>


  </body>
  </html>