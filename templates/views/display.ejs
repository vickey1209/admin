    <% if(details!=null) { %>
    <table style="text-align: center; color: rgb(24, 7, 173); font-weight: 500px; table-layout: auto; text-decoration: solid;">
      
      <tr class="hint">
        <th>Sr.N</th>
        <th> Name
          <div style="display: flex; text-align: center; justify-content:left;">
          <div style="padding-left: 20px"> 
        
              <form action="/ascendingname" method="POST">
                <button type="submit" class="btn btn-success"> <img src="http://localhost:3000/images/ascending1.webp" width="15" height="15" alt="ascending"> </button>
              </form>
            </div>
            <div style="padding-left: 20px;">
              <form action="/descendingname" method="post">
                <button type="submit" class="btn btn-danger"> <img src="http://localhost:3000/images/descending.png" width="15" height="15" alt="ascending"> </button>
  
              </form>
            </div>
          
        </div>
        </th>
        <th>Email</th>
        <th>Gender</th>
        <th>Phone</th>
        <th> Date of Birth
          <div style="display: flex; text-align: center; justify-content:left;">
            <div style="padding-left: 40px" >
                 <form action="/ascendingdate" method="POST">
                  <button type="submit" class="btn btn-success"> <img src="http://localhost:3000/images/ascending1.webp" width="15" height="15" alt="ascending"> </button>
                </form>
              </div>
              
              <div style="padding-left: 20px;">
                <form action="/descendingdate" method="post">
                  <button type="submit" class="btn btn-danger"> <img src="http://localhost:3000/images/descending.png" width="15" height="15" alt="ascending"> </button>
    
                </form>
              </div>
            </div>
    
          </div>





        </th>
       
        <th>Hobbies</th>
        <th>File</th>
        <th>Status</th>
       
        <th>Action</th>
        <th>Action2</th>
        
       

        </h1>
      </tr>
      <% details.forEach(function(item,index){ %>
      <tr>
        <td><%= index+1%></td> 
        <td><%= item.name%></td>
        <td><%= item.email%></td>
        <td><%= item.gender%></td>
        <td><%= item.phone%></td>
        <td><%= item.date%></td>
        <td><%= item.hobbies%></td>
        <td><%= item.file%></td>
        <td><input type="checkbox" checked data-toggle="toggle" data-size="xs" data-onstyle="success"></td>
        
        
        
      <td>
            <a style="color: blue; margin: 5px 5px 5px;"  href="/edit/<%= item._id%>"> <input type="submit" onclick="return confirm ('do u want to Edit user')" value="Edit"></a> 
            <br>
            
            <a style="color: red"  href="/delete/<%= item._id%>"><input type="submit" onclick="return confirm ('do u want to Delete user')" value="Delete"></a>
          </td> 
          
       
            <td>
              <a class="add" title="" data-toggle="tooltip" data-original-title="Add"><i class="material-icons"></i></a>
              <a class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons"></i></a>
              <a class="delete" title="" data-toggle="tooltip" data-original-title="Delete"><i class="material-icons"></i></a>
         
          </td>
