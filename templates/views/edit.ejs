<body>

  </header>

  <!-- form header -->
  <div class="form-header">
    <h1>UPDATE USER</h1>
  </div>


  <form action="/edit/<%= details._id %>" id=""  method="POST">

    <div class="form-body">
      <div class="horizontal-group">
        <div style="display: flex;">
          <div class="form-body">
            
            
        <div class="form-group">
          <label for="name" class="label-title">Name *</label>
          <input type="text" id="name" class="form-input" name="name" placeholder="Enter Name"  value="<%= details.firstname %>" 
            required="required" />
        </div>

        <div class="form-group">
          <label for="age" class="label-title">Email *</label>
          <input type="text" id="age" class="form-input" name="email" placeholder="Enter Email" value="<%= details.email %>" required="required">
        </div>

        <div class="form-group" style="display: flex;align-items: center">
          <label for="gender" class="label-title" >Gender*</label>
          <input type="radio" style="width: auto;" id="gender" class="form-input" name="gender" value="male" required="required"><span style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">MALE</span>
           <input type="radio" style="width: auto; margin-left: 10px;" id="gender" class="form-input" name="gender" value="female" required="required"><span style="padding-left: 10px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 18px;">FEMALE</span>
        </div>
        <div class="form-group">
          <label for="phone" class="label-title">Phone *</label>
          <input type="text" id="phone" class="form-input" name="phone" placeholder="Enter Phone" value="<%= details.phone %>"
            required="required">
        </div>

        <div class="form-group left" style="display: flex;">
          <label for="hobbies" class="label-title">Hobbies:</label>
          <input type="checkbox" id="Dancing" name="hobbies" value=value="<%= data.details.hobbies %>"style="padding: 0 10px 0;">
          <label for="hobbies" style="font-size: 16px;"> Dancing</label><br>
          <input type="checkbox" id="Singing" name="hobbies" value="<%= data.details.hobbies %>">
          <label for="Singing" style="font-size: 16px;"> Singing</label><br>
          <input type="checkbox" id="Sports" name="hobbies" value="<%= data.details.hobbies %>">
          <label for="Sports" style="font-size: 16px;"> Sports</label><br>
        </div>

        <div class="form-group left">
          <label for="date" class="label-title">Date of birth *</label>
          <input type="date" id="date" class="form-input" name="date" placeholder="DOB" value="<%= details.date %>" required="required" />
        </div>
        <div class="form-group">
          <label for="file" class="label-title">Upload profile photo*</label>
          <input type="file" id="file" class="form-input" name="file" placeholder="enter your file" />
        </div>
      
      <div class="form-group left ">
            <label for="phone" class="label-title">Password*</label>
            <input type="password" id="password" class="form-input" name="password" placeholder="Enter Password" value="<%= details.password %>" 
              required="required">
          </div>

          
        <div class="form-group left">
            <label for="phone" class="label-title">Confirm Password*</label>
            <input type="password" id="confirmpassword" class="form-input" name="confirmpassword" value="<%= ssdetails.confirmpassword %>" placeholder="Enter Confirm Password" 
              required="required">
          </div>
   

      <div class="form-footer">
         <button type="submit" class="btn" value="Update" onclick=" submit();">Update</button>
        </div>

  </form>

  <!-- Script for range input label -->
    <script type="text/javascript">
        $(document).ready(function () {
          $("#my_form").submit(function () {
            if ($("#password").val() == "") {
              $("#password").val('<%= data.details.password %>');
            }
          });
        });
      </script>






</body>

